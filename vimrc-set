" ---------- Bash ----------
"  Use bash as default shell
set shell=bash
" ---------- Airline ----------
"
"  Shows airline everytime
set laststatus=2
"
" Integrate with powerline fonts and icons
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1

" Switch between / delete buffers
noremap <M-tab> :bn<CR>
noremap <S-tab> :bp<CR>
nmap <leader>d :BD<CR>
nmap <leader>D :bufdo bd<CR>
